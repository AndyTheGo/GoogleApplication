<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00BCD4"
                android:gravity="center_horizontal"
                android:text="News"
                android:textSize="40dp"
                app:fontFamily="@font/bubblegum_sans"></TextView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                app:srcCompat="@drawable/family" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Family Engagement Day!!"
                android:textColor="#E91E63"
                android:textColorLink="#E91E63"
                android:textSize="35dp"
                android:textStyle="bold"
                app:fontFamily="@font/bubblegum_sans" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Our next Family Engagement Day is coming up on Saturday, February 8th from 2-5pm. This event will focus on Careers and College Readiness! "
                android:textSize="20dp"
                app:fontFamily="@font/bubblegum_sans" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Experts will be joining us for an afternoon of round table discussions on topics including: summer experiences, extracurriculars, college prep, and mental health."
                android:textSize="20sp"
                app:fontFamily="@font/bubblegum_sans" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="The day will wrap up with a panel discussion with Google engineers who will be joining us to discuss their academic and professional pathways to Google."
                android:textSize="20sp"
                app:fontFamily="@font/bubblegum_sans" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Lastly, throughout the day all student attendees will have the opportunity to have their professional headshots taken!"
                android:textSize="20sp"
                app:fontFamily="@font/bubblegum_sans" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="We hope that you can join us and take advantage of this excellent opportunity. Please RSVP by Wednesday, January 29 to let us know whether you can make it (parents/guardians are encouraged to attend)!"
                android:textSize="20sp"
                app:fontFamily="@font/bubblegum_sans" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Hope to see you there!"
                android:textSize="20sp"
                app:fontFamily="@font/bubblegum_sans" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Coach Natalie  "
                android:textSize="20sp"
                app:fontFamily="@font/bubblegum_sans" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>